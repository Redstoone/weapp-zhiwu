/**index.wxss**/
.index-tab {
  height: 88rpx;
}
.index-tab .weui-navbar__item {
  text-align: center;
  font-size: 15px;
}
.search-bar {
  background-color: #fff;
  border-top: none;
  border-bottom: none;
  padding: 30rpx 20rpx 10rpx;
}

.swiper-wrap {
  height: 450rpx;
}
.swiper-wrap .wx-swiper-dot {
  width: 45rpx;
  height: 7rpx;
  background-color: #adadad;
  border-radius: 0;
}
.swiper-wrap .wx-swiper-dot.wx-swiper-dot-active {
  background-color: #fff;
}

.box-title {
  margin: 40rpx 20rpx;
  padding: 20rpx 30rpx;
  background-color: #252525;
}
.bt-star {
  line-height: 42rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}
.bt-more {
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  width: 100rpx;
  text-align: right;
}

.coupon-list {
  width: 100%;
  display: flex;
  padding: 40rpx 10rpx 20rpx;
}
.coupon-item {
  flex: 1;
  margin: 0 16rpx;
}
.coupon-item:last-child {
  padding-right: 40rpx;
}
.coupon-item .ci-content-wrap {
  padding: 30rpx 40rpx;
  background-size: cover;
}
.coupon-item .ci-content {
  width: 250rpx;
}
.coupon-item .ci-amount {
  font-size: 40rpx;
  color: #ff764c;
  margin-bottom: 10rpx;
}
.coupon-item .ci-condition {
  font-size: 28rpx;
  color: #ff764c;
  margin-bottom: 5rpx;
}
.coupon-item .ci-expiration {
  font-size: 24rpx;
  color: #252525;
}

.recommend-wrap {
  margin-right: 0;
}
.re-two,
.re-three {
  margin-top: 40rpx;
}
.re-two .ret-item {
  margin-right: 20rpx;
  width: 340rpx;
  height: 400rpx;
}
.re-two .ret-item .img,
.re-three .ret-item .img {
  height: 100%;
}
.re-two .ret-item:last-child {
  margin-right: 0;
}

.re-three .ret-item {
  margin-bottom: 20rpx;
  width: 100%;
  height: 300rpx;
}

.discount-wrap {
}
.dw-item {
  position: relative;
}
.dw-item .di-percent {
  position: absolute;
  right: 0;
  top: 0;
  background-color: #ba1919;
  text-align: center;
  color: #fff;
  width: 80rpx;
  height: 36rpx;
  line-height: 36rpx;
}
.dw-item .di-footer {
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  background-image: linear-gradient(
    to right,
    rgba(255, 255, 255, 1),
    rgba(255, 255, 255, 0)
  );
}
.dw-item .di-name {
  font-size: 28rpx;
  line-height: 48rpx;
  color: #252525;
  font-weight: 600;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.dw-item .di-price {
  font-size: 22rpx;
}
.dw-item .di-now {
  color: #ff3a05;
}
.dw-item .di-now-txt {
  line-height: 36rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.dw-item .di-former {
  margin-left: 10rpx;
  text-decoration: line-through;
}
.dw-item .di-former-txt {
  line-height: 48rpx;
}
.dw-item image {
  height: 100%;
}

.dw-one {
  height: 380rpx;
  width: 100%;
  margin-bottom: 22rpx;
}
.dw-one .di-percent {
  width: 154rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 40rpx;
  font-weight: 600;
}
.dw-one .di-footer {
  height: 96rpx;
}
.dw-two {
  height: 372rpx;
  width: 364rpx;
  margin-right: 10rpx;
}
.dw-three {
  height: 174rpx;
  width: 367rpx;
}
.dw-three .di-time {
  font-size: 20rpx;
}
.dw-item-three {
  margin-left: 10rpx;
}
.dw-item-three .dw-three:first-child {
  margin-bottom: 20rpx;
}

.tl-item {
  margin-bottom: 30rpx;
}
.tl-item .tl-img {
  width: 360rpx;
  height: 218rpx;
  position: relative;
}
.tl-item .tl-img .tl-top {
  position: absolute;
  width: 110rpx;
  height: 110rpx;
}
.tl-item .tl-img image {
  height: 100%;
}
.tl-item .tl-cont {
  border: 2rpx solid #b1b1b1;
  padding: 20rpx 0;
  text-align: center;
  position: relative;
}
.tl-item .tl-cont::after{
  content: "";
  width: 2rpx;
  top: 49rpx;
  height: 120rpx;
  background-color: #fff;
  position: absolute;
}
.tl-item .tl-brand {
  color: #252525;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 80rpx;
}
.tl-item .tl-name {
  color: #252525;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.tl-item .tl-price {
  color: #ff3a05;
  font-size: 32rpx;
  line-height: 60rpx;
}
.tl-item-odd .tl-img,
.tl-item-even .tl-cont {
  margin-right: 10rpx;
}
.tl-item-odd .tl-cont {
  border-left: none;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.tl-item-even .tl-cont {
  border-right: none;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}
.tl-item-even .tl-img,
.tl-item-odd .tl-cont {
  margin-left: 10rpx;
}
.tl-item-odd .tl-top {
  left: 0;
  top: 0;
}
.tl-item-even .tl-top {
  right: 0;
  top: 0;
}
.tl-item-odd .tl-item .tl-cont::after{
  right: 0
}
.tl-item-even .tl-item .tl-cont::after{
  left: 0
}

.goods-list {
  margin: 20rpx;
}
.goods-item {
  width: 345rpx;
  position: relative;
  margin-right: 20rpx;
}
.goods-item-head {
  position: absolute;
  left: 30rpx;
  top: 330rpx;
  line-height: 50rpx;
  color: #fff;
}
.goods-item-img {
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 20rpx;
}
.goods-item-img-image {
  width: 50rpx;
  height: 50rpx;
}
.goods-item:nth-child(2) {
  margin-right: 0;
}
.goods-img-image {
  width: 345rpx;
  height: 345rpx;
}
.goods-cant {
  padding: 10rpx 0 20rpx 10rpx;
}
.goods-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #333333;
}
.goods-info {
  margin-top: 10rpx;
  color: #999;
}
.goods-price {
  font-size: 22rpx;
}
.goods-now {
  color: #999;
  text-align: center;
}
.goods-now-text {
  line-height: 48rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.goods-former {
  margin-left: 10rpx;
  text-decoration: line-through;
}
.goods-former-text {
  line-height: 48rpx;
}
.goods-like {
  line-height: 48rpx;
}
